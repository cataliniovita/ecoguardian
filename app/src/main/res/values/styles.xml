<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
    
    <!-- Text input style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="hintTextColor">@color/input_hint</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Bottom navigation style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selected</item>
        <item name="itemTextColor">@color/bottom_nav_selected</item>
        <item name="itemBackground">@color/bottom_nav_background</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources> 